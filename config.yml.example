# === Power Management ===
power:
  # Automatically turn off display at night (true/false)
  auto_off: true
  
  # Turn off time (24-hour format, e.g., "23:00")
  off_time: "23:00"
  
  # Turn on time (24-hour format, e.g., "07:00")
  on_time: "07:00"

